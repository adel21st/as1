<p>
  <strong>nom:</strong>
  <%= @city.nom %>
</p>
<p>
  <strong>Latitude:</strong>
  <%= @city.latitude %>
</p>
<p>
  <strong>Longitude:</strong>
  <%= @city.longitude %>
</p>

<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@city.latitude}%2C#{@city.longitude}" %>

<h3>Nearby cities</h3>
<ul>
  <% for city in @city.nearbys(10) %>
  <li><%= link_to city.nom, city %> (<%= city.distance.round(2) %> miles)</li>
  <% end %>
</ul>

<p>
  <%= link_to "Edit", edit_city_path(@city) %> |
  <%= link_to "Destroy", @city, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", cities_path %>
</p>
